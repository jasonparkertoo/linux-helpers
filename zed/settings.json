{
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "base_keymap": "JetBrains",
  "ui_font_size": 20,
  // "ui_font_family": "Source Sans 3",
  "buffer_font_size": 20,
  // "buffer_font_family": "Source Code Pro",
  "edit_predictions": {
    "mode": "subtle"
  },
  "terminal": {
    "cursor_shape": "bar",
    "blinking": "on"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.gitignore",
    "**/.gitattributes",
    "**/.classpath",
    "**/.settings",
    "**/.factorypath",
    "**/.project",
    "**/target"
  ],
  "languages": {
    "Plain Text": {
      "show_whitespaces": "all"
    },
    "Go": {
      "show_edit_predictions": true,
      "format_on_save": "on",
      "remove_unused_imports_on_save": true
    },
    "Java": {
      "format_on_save": "on",
      // "formatter": {
      //   "external": {
      //     "command": "google-java-format",
      //     "arguments": ["-a", "-"]
      //   }
      // }
    }
  },
  "auto_update_extensions": {
    "java": true
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "inline_alternatives": [
      {
        "provider": "ollama",
        "model": "stable-code"
      }
    ],
    "version": "2"
  },
  "lsp": {
      "jdtls": {
        "initialization_options": {
          "settings": {
            "java": {
              "jdt": {
                "ls": {
                  "lombokSupport": {
                    "enabled": true // Set this to true to enable lombok support
                  }
                }
              }
            }
          }
        }
      }
    }
}
